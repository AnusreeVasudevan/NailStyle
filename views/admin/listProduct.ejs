<script>
    function handleFilterChange() {
        const filterType = document.querySelector('.searchform select').value;
        fetchFilteredProducts(filterType);
    }
    
    async function fetchFilteredProducts(filterType) {
        try {
            const response = await fetch(`/admin/admin/filter-products?type=${filterType}`);
            const data = await response.json();
            if (response.ok) {
                updateProductTable(data.products);
            } else {
                console.error('Failed to fetch products', data.message);
            }
        } catch (error) {
            console.error('Error fetching products:', error);
        }
    }
    
    function updateProductTable(products) {
        console.log(products);
        const table = document.querySelector('.product-table tbody');
        table.innerHTML = ''; // Clear existing rows
        if (products.length === 0) {
            table.innerHTML = '<tr><td colspan="9">Product Not Found</td></tr>';
        } else {
            products.forEach(product => {
                const row = `<tr>
                    <td>${product.name}</td>
                    <td>${product.description}</td>
                    <td>${product.images.map(image => `<img src="../uploads/productImages/${image}" alt="" height="60px" width="60px">`).join('')}</td>
                    <td>${product.category.name}</td>
                    <td>${product.price}</td>
                    <td>${product.discountPrice}</td>
                    <td>${product.countInStock}</td>
                    <td>${product.is_deleted ? 'Inactive' : 'Active'}</td>
                    <td>
                        <a href="/admin/active?id=${product._id}&action=${product.is_deleted ? 'Inactive' : 'Active'}" class="btn btn-primary">
                            ${product.is_deleted ? 'Active' : 'Inactive'}
                        </a><br><br>
                        <a href="/admin/editproduct?id=${product._id}" class="btn btn-primary">Edit</a>
                    </td>
                </tr>`;
                table.innerHTML += row;
            });
        }
    }
    
    document.querySelector('.searchform select').addEventListener('change', handleFilterChange);
    </script>
    
    
        
